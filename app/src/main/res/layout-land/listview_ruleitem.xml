<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_ruleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_deleteRule"
        app:layout_constraintBottom_toBottomOf="@id/button_deleteRule"
        />

    <Button
        android:id="@+id/button_editRule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="수정"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toTopOf="@id/button_deleteRule"
        app:layout_constraintBottom_toBottomOf="@id/button_deleteRule"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button_deleteRule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="삭제"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button_shareRule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="공유"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button_deleteRule"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.625"/>

    <TextView
        android:id="@+id/textView_ruleContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@id/textView_ruleTitle"
        app:layout_constraintTop_toBottomOf="@id/button_deleteRule"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/textView_ruleWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@id/textView_ruleContent"
        app:layout_constraintTop_toBottomOf="@id/textView_ruleContent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/textView_ruleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@id/textView_ruleWeek"
        app:layout_constraintTop_toBottomOf="@id/textView_ruleWeek"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="174dp" />

    <TextView
        android:id="@+id/textView_ruleMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@id/textView_ruleTime"
        app:layout_constraintTop_toBottomOf="@id/textView_ruleTime"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="209dp" />

    <TextView
        android:id="@+id/textView_forEmpty1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ruleMember" />
</android.support.constraint.ConstraintLayout>
