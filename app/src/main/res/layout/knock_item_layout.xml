<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_KnockItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/textView_KnockItemReciever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="test Reciever"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/textView_KnockItemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="test Content"
        android:textSize="18dp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/textView_KnockItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="test Time"
        android:layout_gravity="right"
        android:layout_marginRight="5dp" />

</LinearLayout>