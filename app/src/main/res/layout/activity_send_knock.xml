<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendKnockActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/textView_MyKnockReciever"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="받는 사람 :"
            android:textSize="17dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editText_MyKnockReciever"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
        <Button
            android:id="@+id/button_MyKnockReciever"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp">
        <EditText
            android:id="@+id/editText_MyKnockContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:hint="보내고 싶은 메세지를 쓰시오"
            android:gravity="start"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="언제 보낼까요?"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>
            <RadioGroup
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btnOpt1_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="즉시"/>
                <RadioButton
                    android:id="@+id/btnOpt2_3m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3분 후"/>
                <RadioButton
                    android:id="@+id/btnOpt3_5m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5분 후"/>

            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/button_MyKnockSend"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="보내기"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>