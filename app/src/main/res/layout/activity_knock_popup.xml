<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KnockPopupActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="똑똑똑이 도착했어요"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/KnockOrange"/>
    <TextView
        android:id="@+id/textView_KnockPopupContnet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:text="text"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_popupGoApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="앱으로 이동"
            android:textColor="@color/white"
            android:textSize="@dimen/button_defualt"
            android:background="@color/KnockOrange"/>
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="0.1"/>
        <Button
            android:id="@+id/button_popupCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="읽음"
            android:textColor="@color/white"
            android:textSize="@dimen/button_defualt"
            android:background="@color/KnockOrange"/>
    </LinearLayout>


</LinearLayout>